{% set currentPath = app.request.pathinfo %}

{% block navigation %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <svg class="d-block" width="36" height="36" viewBox="0 0 612 612" xmlns="http://www.w3.org/2000/svg" focusable="false">
        <title>Cristian Store</title>
        <path fill="white" d="M510 8a94.3 94.3 0 0 1 94 94v408a94.3 94.3 0 0 1-94 94H102a94.3 94.3 0 0 1-94-94V102a94.3 94.3 0 0 1 94-94h408m0-8H102C45.9 0 0 45.9 0 102v408c0 56.1 45.9 102 102 102h408c56.1 0 102-45.9 102-102V102C612 45.9 566.1 0 510 0z"></path>
        <path fill="white" d="M196.77 471.5V154.43h124.15c54.27 0 91 31.64 91 79.1 0 33-24.17 63.72-54.71 69.21v1.76c43.07 5.49 70.75 35.82 70.75 78 0 55.81-40 89-107.45 89zm39.55-180.4h63.28c46.8 0 72.29-18.68 72.29-53 0-31.42-21.53-48.78-60-48.78h-75.57zm78.22 145.46c47.68 0 72.73-19.34 72.73-56s-25.93-55.37-76.46-55.37h-74.49v111.4z"></path>
    </svg>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item {% if currentPath == "/" %}active{% endif %}">
                <a class="nav-link" href="{{ path('homepage') }}">Home</a>
            </li>
            <li class="nav-item {% if currentPath == "/list" %}active{% endif %}">
                <a class="nav-link" href="{{ path('list_action') }}">All items</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Departments
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Fruits</a>
                    <a class="dropdown-item" href="#">Vegetables</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Furniture</a>
                </div>
            </li>
            <li class="nav-item {% if currentPath == "/cart" %}active{% endif %}">
                <a class="nav-link" href="{{ path('cart') }}">Cart</a>
            </li>
            <li class="nav-item {% if currentPath == "/login" %}active{% endif %}">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="nav-link" href="{{ path('security_logout') }}">Logout</a>
            {% else %}
                <a class="nav-link" href="{{ path('security_login') }}">Login</a>
            {% endif %}
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" placeholder="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
{% endblock %}