{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/login.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block container %}
    <body class=" login">
        <div class="logo">
            <a href="#">
                <img src="{{ asset('img/logo-big.png') }}" alt="" /> </a>
        </div>
        <div class="content">
            <form method="post">
                <h3 class="form-title font-green">Sign In</h3>
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" value="{{ lastUsername ? lastUsername : '' }}" name="login_form[_username]" /> </div>
                <div class="form-group">
                    <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="login_form[_password]" /> </div>
                <div class="form-actions">
                    <button type="submit" class="btn green uppercase">Login</button>
                </div>
                <div class="create-account">
                    <p>
                        <a href="{{ path('user_register') }}" id="register-btn" class="uppercase">Create an account</a>
                    </p>
                </div>
            </form>
        </div>
        <div class="copyright"> 2019 Â© Metronic. Cristian Cojocaru </div>
    </body>
{% endblock %}