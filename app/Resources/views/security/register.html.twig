{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('css/select2.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/select2-bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="{{ asset('css/login.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
{% endblock %}

{% block container %}
    <body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="#">
            <img src="{{ asset('img/logo-big.png') }}" alt="" /> </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
          <!-- BEGIN REGISTRATION FORM -->
        <form method="post">
            <h3 class="font-green">Sign Up</h3>
            <p class="hint"> Enter your personal details below: </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">First Name</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="First Name" name="user_registration_form[userProfile][firstname]" required /> </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Last Name</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Last Name" name="user_registration_form[userProfile][lastname]" required/> </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Email</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Email" name="user_registration_form[userProfile][email]" required/> </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Mobil Number</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Ex: +40731016859" name="user_registration_form[userProfile][mobileNumber]" required/> </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Address</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="Address" name="user_registration_form[userProfile][address]" required/> </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">City/Town</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="City/Town" name="user_registration_form[userProfile][city]" required/> </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Country</label>
                <select name="user_registration_form[userProfile][country]" class="form-control" required>
                    <option value="">Country</option>
                    <option value="RO">Romania</option>
                </select>
            </div>
            <p class="hint"> Enter your account details below: </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="user_registration_form[username]" required/> </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" id="register_password" placeholder="Password" name="user_registration_form[plainPassword][first]" required/> </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Re-type Your Password" name="user_registration_form[plainPassword][second]" required/> </div>
            <div class="form-actions">
                <a href="{{ path('security_login') }}" type="button" class="btn green btn-outline">Back</a>
                <button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Submit</button>
                {{ form_row(form._token) }}
            </div>
        </form>
        <!-- END REGISTRATION FORM -->
    </div>
    <div class="copyright"> 2019 Â© Metronic. Cristian Cojocaru </div>
    {% block javascripts %}
        <!-- BEGIN PAGE LEVEL PLUGINS -->
        <script src="{{ asset('js/jquery.validate.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/additional-methods.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/select2.full.min.js') }}" type="text/javascript"></script>
        <!-- END PAGE LEVEL PLUGINS -->
    {% endblock %}
    </body>
{% endblock %}