{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
    <link href="{{ asset('css/ladda-themeless.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="page-content">
            <div class="col-md-12">
                <div class="breadcrumbs">
                    <ol class="breadcrumb">
                        <li class="active"> Cart </li>
                    </ol>
                </div>
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-title">
                        <div class="caption col-md-6">
                            <span class="caption-subject font-red sbold">Your Cart</span>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button type="button" data-loading-text="Loading..." class="btn btn-primary mt-ladda-btn ladda-button mt-progress-demo" data-style="expand-left">
                                    <span class="ladda-label">Export to CSV</span>
                                    <span class="ladda-spinner"></span><span class="ladda-spinner"></span><div class="ladda-progress" style="width: 115px;"></div>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-hover table-bordered" id="cart_table">
                            <thead>
                            <tr>
                                <th> Product Name </th>
                                <th> Quantity </th>
                                <th> Price per Unit </th>
                                <th> Total Price </th>
                                <th> Delete </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for key, cart in carts %}
                                <tr>
                                    <td>{{ cart.product.name }}</td>
                                    <td>{{ cart.quantity }}</td>
                                    <td>{{ cart.product.price }}</td>
                                    <td>{{ cart.totalPrice }}</td>
                                    <td><a href="javascript:;" class="btn btn-outline btn-circle dark btn-sm black delete" data-id="{{ cart.id }}">
                                            <i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

