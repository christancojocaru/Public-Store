{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="page-content">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-edit"></i> Edit {{ product.name }} </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                        <a href="#portlet-config" data-toggle="modal" class="config" data-original-title="" title=""> </a>
                        <a href="javascript:;" class="reload" data-original-title="" title=""> </a>
                        <a href="javascript:;" class="remove" data-original-title="" title=""> </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    {{ form_start(form, {'attr' : {'class' : 'form-horizontal'}}) }}
                        <div class="form-body">
                            {% if success == "Success!" %}
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <h4>{{ success }}</h4>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="form-group">
                                {{ form_label(form.name, "Product Name", {'label_attr' : {'class' : 'col-md-3 control-label'}}) }}
                                <div class="col-md-4">
                                    {{ form_widget(form.name, {'attr' : {'class' : 'form-control input-circle'}}) }}
                                    <span class="help-block"> Reminder: {{ product.name }} </span>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.price, "Product Price", {'label_attr' : {'class' : 'col-md-3 control-label'}}) }}
                                <div class="col-md-4">
                                    {{ form_widget(form.price, {'attr' : {'class' : 'form-control input-circle'}}) }}
                                    <span class="help-block"> Reminder: {{ product.price }} </span>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.stock, "Product Stock", {'label_attr' : {'class' : 'col-md-3 control-label'}}) }}
                                <div class="col-md-4">
                                    {{ form_widget(form.stock, {'attr' : {'class' : 'form-control input-circle'}}) }}
                                    <span class="help-block"> Reminder: {{ product.stock }} </span>
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.category, "Product Category", {'label_attr' : {'class' : 'col-md-3 control-label'}}) }}
                                <div class="col-md-4">
                                    {{ form_widget(form.category, {'attr' : {'class' : 'form-control input-circle'}}) }}
                                    <span class="help-block"> Reminder: {{ product.category.name }} </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    {{ form_widget(form.submit, {'attr' : {'class' : 'btn btn-circle green'}}) }}
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                    <!-- END FORM-->
                </div>
            </div>
        </div>
    </div>
{% endblock %}