{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="page-content">
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="glyphicon glyphicon-shopping-cart"></i>Current Cart</div>
                </div>
                <div class="portlet-body">
                    <div>
                        <table class="table table-striped table-bordered table-advance" id="sample_editable_1">
                            <thead>
                            <tr>
                                <th> # </th>
                                <th> Name </th>
                                <th> Quantity </th>
                                <th> Price per Unit </th>
                                <th> Total Price </th>
                                <th> </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cart in carts %}
                                <tr>
                                    <td>{{ cart.id }}</td>
                                    <td class="highlight">{{ cart.product.name }}</td>
                                    <td>{{ cart.quantity }}</td>
                                    <td>{{ cart.product.price }} $</td>
                                    <td>{{ cart.totalPrice }} $</td>
                                    <td>
                                        <a href="javascript:;" class="btn btn-outline btn-circle btn-sm purple edit">
                                            <i class="fa fa-edit"></i> Edit </a>
                                        <a href="javascript:;" class="btn btn-outline btn-circle dark btn-sm black delete">
                                            <i class="fa fa-trash-o"></i> Delete </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="{{ asset('js/datatable.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/datatables.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/datatables.bootstrap.js') }}" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
{#    <script src="{{ asset('assets/pages/scripts/table-datatables-editable.js') }}" type="text/javascript"></script>#}
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}