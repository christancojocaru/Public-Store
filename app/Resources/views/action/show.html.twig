{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="page-content">
            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <h1>{{ product.name }}</h1>
                    <li>
                        <a href="{{ path('department_action', {'id' : product.category.department.id }) }}">{{ product.category.department.name }}</a>
                    </li>
                    <li class="active">{{ product.category.name }}</li>
                </ol>
            </div>
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption"></div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="{{ asset('img/res_0c5e34e87753cc300fa8260831acd46e_450x450_gejp.jpg') }}">
                        </div>
                        <div class="col-md-4">
                            <p>sdfsdfgfdbfvbdsofgvndsofgsdfngndfgondfgjnidfjb</p>
                        </div>
                        <div class="col-md-4">
                            <h2 class="text-danger">{{ product.price }}<small class="text-muted"> lei </small></h2>
                            <input type="hidden" id="_price" value="{{ product.price }}">
                            <input type="hidden" id="_id" value="{{ product.id }}">
                            <div style="width: 75%; margin-left: auto; margin-right: auto">
                                <button type="button" id="addToCart" class="btn btn-lg btn-block btn-primary uppercase">
                                    <span class="glyphicon glyphicon-shopping-cart"></span> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/functions.js') }}" type="text/javascript"></script>
{%  endblock %}