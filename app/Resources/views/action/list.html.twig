{% extends 'base.html.twig' %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('JavaScript/functions.js') }}" ></script>
{% endblock %}

{% block body %}
    {% include 'action/modal/modal.html.twig' %}
    {% block modal %}{% endblock %}

    {% set productTableId = 1 %}
    <div class="row">
        <div class="table-responsive col-md-5">
            <table class="table text-center" id="product_table">
                <thead class="thead-dark">
                <tr><th colspan="4">Products</th></tr>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <th scope="row">{{ productTableId }}</th>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }} lei</td>
                        <td>
                            <input class="btn btn-outline-secondary btn-lg" type="button" value="Add to Cart" data-toggle="modal" data-target="#exampleModalCenter" onclick="addToCart({{ product.id }})">
                        </td>
                    </tr>
                    {% set productTableId = productTableId + 1 %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4"></div>
        <div class="table-responsive col-md-3">
            <table class="table table-bordered text-center" id="cart_table">
                <thead class="thead-dark">
                <tr><th colspan="4">Cart</th></tr>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total Price</th>
                </tr>
                </thead>
                <tbody id="cart_table_body"></tbody>
            </table>
        </div>
    </div>
{% endblock %}