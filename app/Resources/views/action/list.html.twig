{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/Row.js') }}" ></script>
    <script type="text/javascript" src="{{ asset('js/cart_on_same_page.js') }}" ></script>
{% endblock %}

{% block body %}
    {% include 'action/modal/modal.html.twig' %}
    {% block modal %}{% endblock %}

    {% set productTableId = 1 %}
    <div class="row">
        <div class="table-responsive" id="product_table">
            <table class="table text-center">
                <thead class="thead-dark">
                <tr><th colspan="4">Products</th></tr>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for key, products in department %}
                    <tr><th colspan="4">{{ key }}</th></tr>

                    {% for product in products %}
                    <tr>
                        <th scope="row" id="{{ product.name }}">{{ productTableId }}</th>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }} lei</td>
                        <td>
                            <input class="btn btn-outline-secondary btn-lg" type="button" value="Add to Cart" data-toggle="modal" data-target="#selectQuantity" onclick="addToCart({{ product.id }})">
                        </td>
                    </tr>
                    {% set productTableId = productTableId + 1 %}
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div id="between_tables" style="display: none"></div>
        <div class="table-responsive" id="cart_table" style="display: none">
            <table class="table table-bordered text-center">
                <thead class="thead-dark">
                <tr><th colspan="4">Cart</th></tr>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Product</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total Price</th>
                </tr>
                </thead>
                <tbody id="cart_table_body"></tbody>
            </table>
        </div>
    </div>
{% endblock %}