{% extends 'base.html.twig' %}
{% set department = products|first.category.department %}

{% block body %}
    <div class="container-fluid">
        <div class="page-content">
            <div class="breadcrumbs">
                <ol class="breadcrumb">
                    <li>
                        <a href="{{ path('department_action', {'id' : department.id}) }}">{{ department.name }}</a>
                    </li>
                    <li class="active">{{  products|first.category.name }}</li>
                </ol>
            </div>
            <div class="row">
                {% for product in products %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="portlet box light portlet-fit bordered">
                            <div class="portlet-title">
                                <div class="caption">
                                    <h3>{{ product.name }}</h3>
                                    <h3>{{ product.price }}<span> lei </span></h3>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="mt-element-overlay">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="mt-overlay-1">
                                                <img src="{{ asset('img/res_0c5e34e87753cc300fa8260831acd46e_450x450_gejp.jpg') }}">
                                                <a class="mt-overlay" href="{{ path('show_action', {'id' : product.id}) }}"></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}