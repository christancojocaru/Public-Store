{% set user, pathInfo = app.user.username, app.request.pathInfo %}
{% block header %}
    <header class="page-header">
        <nav class="navbar mega-menu" role="navigation">
            <div class="container-fluid">
                <div class="clearfix navbar-fixed-top">
                    <!-- BEGIN LOGO -->
                    <a id="index" class="page-logo" href="{{ path('homepage_action') }}">
                        <img src="{{ asset('img/logo.png') }}" alt="Logo"> </a>
                    <!-- END LOGO -->
                    <!-- BEGIN SEARCH -->
                    <form class="search" action="" method="GET">
                        <input type="text" class="form-control" name="query" placeholder="Search...">
                        <a href="javascript:;" class="btn submit md-skip"><!-- update later-->
                            <i class="fa fa-search"></i>
                        </a>
                    </form>
                    <!-- END SEARCH -->
                    <!-- BEGIN TOPBAR ACTIONS -->
                    <div class="topbar-actions">
                        <!-- BEGIN USER PROFILE -->
                        <div class="btn-group-img btn-group">
                            <button type="button" class="btn btn-sm md-skip dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                <span>Hi, {{ user }}</span>
                                <img src="{{ asset('assets/layouts/layout5/img/avatar1.jpg') }}" alt=""> </button>
                            <ul class="dropdown-menu-v2" role="menu">
                                <li>
                                    <a href="#">
                                        <i class="icon-user"></i> My Profile
                                        <span class="badge badge-danger">1</span>
                                    </a>
                                </li>
                                <li class="divider"> </li>
                                <li>
                                    <a href="{{ path('security_logout') }}">
                                        <i class="icon-key"></i> Log Out </a>
                                </li>
                            </ul>
                        </div>
                        <!-- END USER PROFILE -->
                    </div>
                    <!-- END TOPBAR ACTIONS -->
                </div>
                <!-- BEGIN HEADER MENU -->
                <div class="nav-collapse collapse navbar-collapse navbar-responsive-collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown dropdown-fw dropdown-fw-disabled {% if pathInfo == "/list" %}active open selected{% endif %}">
                            <a href="javascript:;" class="text-uppercase">
                                <i class="icon-home"></i> Homepage </a>
                            <ul class="dropdown-menu dropdown-menu-fw">
                                <li class="dropdown more-dropdown-sub">
                                    <a href="{{ path('department_action', {'id' : 1}) }}">
                                        <i class="icon-diamond"></i> Electronics </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('category_action', {'id' : 1}) }}"> SmartPhones </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('category_action', {'id' : 2}) }}"> Laptops </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown more-dropdown-sub">
                                    <a href="{{ path('department_action', {'id' : 2}) }}">
                                        <i class="icon-diamond"></i> Appliances </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('category_action', {'id' : 3}) }}"> Refrigerators </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('category_action', {'id' : 4}) }}"> Cookers </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown more-dropdown-sub">
                                    <a href="{{ path('department_action', {'id' : 3}) }}">
                                        <i class="icon-diamond"></i> Furnitures </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('category_action', {'id' : 5}) }}"> Couches </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('category_action', {'id' : 6}) }}"> Chairs </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown dropdown-fw dropdown-fw-disabled {% if pathInfo == "/cart" %}active open selected{% endif %}">
                            <a href="javascript:;" class="text-uppercase">
                                <i class="icon-user"></i> User </a>
                            <ul class="dropdown-menu dropdown-menu-fw">
                                <li class="active">
                                    <a href="">
                                        <i class="fa fa-user"></i> Profile </a>
                                </li>
                                <li>
                                    <a href="{{ path('user_account_action') }}">
                                        <i class="fa fa-user"></i> Account </a>
                                </li>
                                <li>
                                    <a href="{{ path('cart_action') }}">
                                        <i class="fa fa-shopping-cart"></i> Cart </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- END HEADER MENU -->
            </div>
            <!--/container-->
        </nav>
    </header>
